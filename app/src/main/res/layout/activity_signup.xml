<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E7E7"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/location_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E8E7E7"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="회원가입"
            android:textColor="#6C6B6B"
            android:textSize="20dp"
             />


        <ImageView
            android:id="@+id/signup_back"
            android:layout_width="102dp"
            android:layout_height="28dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_baseline_chevron_left_24"
             />

    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/kakao_signup_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finish_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="224dp"
        android:background="#00FFFFFF"
        android:src="@drawable/kakao_login_medium_narrow" />

    <EditText
        android:id="@+id/mName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="212dp"
        android:background="@drawable/round_corner"
        android:hint="   닉네임"
        app:backgroundTint="#FFFFFF" />

    <EditText
        android:id="@+id/mEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:hint="   이메일"
        app:backgroundTint="#FFFFFF" />

    <EditText
        android:id="@+id/mPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:hint="   비밀번호"
        android:background="@drawable/round_corner"
        app:backgroundTint="#FFFFFF" />

    <EditText
        android:id="@+id/mPasswordCheck"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:hint="   비밀번호 확인"
        app:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/finish_signup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mPasswordCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:text="Sign up"
        app:backgroundTint="#424040" />

</RelativeLayout>