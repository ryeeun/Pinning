<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/location_activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">


            <ImageButton
                android:id="@+id/act_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_more_horiz_24"
                android:fontFamily="@font/dxbold" />

            <ImageView
                android:id="@+id/details_back"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_baseline_chevron_left_24"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp"
                app:tint="#FF636363"/>

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pin_photo"
            android:layout_width="match_parent"
            android:layout_height ="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/pin_category"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/pin_category"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/pin_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:gravity="bottom"
            android:hint="카테고리"
            android:textColor="#9F9F9F"
            android:textSize="15dp"
            android:fontFamily="@font/dxbold"/>

        <TextView
            android:id="@+id/pin_name"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_alignStart="@+id/pin_category"
            android:layout_alignLeft="@+id/pin_category"
            android:gravity="bottom"
            android:hint="핀명"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/dxbold"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/pin_category"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/pin_category"
            android:layout_toRightOf="@+id/pin_category"
            android:gravity="bottom"
            android:hint="상점명"
            android:textColor="#9F9F9F"
            android:textSize="15dp"
            android:fontFamily="@font/dxbold"/>

        <TextView
            android:id="@+id/pin_content"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pin_photo"
            android:layout_alignStart="@+id/pin_category"
            android:layout_alignLeft="@+id/pin_category"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:hint="핀 내용"
            android:lines="6"
            android:textSize="15dp"
            android:textColor="#000000"
            android:fontFamily="@font/dxbold"/>
    </RelativeLayout>

    <TableLayout
        android:background="#000000"
        android:id="@+id/page"
        android:visibility="invisible"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableLayout>
            <Button
                android:id="@+id/scrap_pin"
                android:text="지도에 추가하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dxbold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/details_correct"
                android:text="수정"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dxbold"/>
            <Button
                android:id="@+id/details_delete"
                android:text="삭제"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dxbold"/>
            <Button
                android:id="@+id/pin_scrap"
                android:text="스크랩"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dxbold"/>
        </TableLayout>
    </TableLayout>


</FrameLayout>