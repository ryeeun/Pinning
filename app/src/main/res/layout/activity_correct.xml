<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/location_activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">


            <Button
                android:id="@+id/correct_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="완료"
                android:textColor="#FF636363"
                android:background="#00000000"
                android:fontFamily="@font/dxbold" />

            <Button
                android:id="@+id/correct_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="취소"
                android:textColor="#FF636363"
                android:background="#00000000"
                android:fontFamily="@font/dxbold" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pin_photo"
            android:layout_width="match_parent"
            android:layout_height ="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/pin_name"
            android:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/location_activity"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/dxbold"
                android:gravity="center_vertical"
                android:text="카테고리 선택" />

            <ImageButton
                android:id="@+id/btn_category"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_recyclerview"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_below="@+id/linearlayout"
            android:layout_alignStart="@+id/linearlayout"
            android:layout_alignLeft="@+id/linearlayout"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/dxbold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/pin_name"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/category_recyclerview"
            android:layout_alignStart="@+id/linearlayout"
            android:layout_alignLeft="@+id/linearlayout"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/dxbold"
            android:gravity="bottom"
            android:hint="핀명"
            android:textColor="#000000"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/pin_content"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pin_photo"
            android:layout_alignStart="@+id/linearlayout"
            android:layout_alignLeft="@+id/linearlayout"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:fontFamily="@font/dxbold"
            android:hint="핀 내용"
            android:lines="8"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>


</FrameLayout>